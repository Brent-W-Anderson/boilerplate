{
    "name": "my-ssr-app",
    "version": "1.0.0",
    "license": "MIT",
    "description": "My SSR app using Express, TypeScript, and React",
    "main": "dist/server/server.js",
    "scripts": {
        "build": "rimraf dist & yarn build:client & yarn build:server",
        "build:client": "webpack --config=config/webpack.client.config.ts",
        "build:server": "webpack --config=config/webpack.server.config.ts",
        "start": "yarn build & node dist/server/server.js",
        "dev": "webpack serve --config=config/webpack.client.config.ts"
    },
    "devDependencies": {
        "@types/express": "^4.17.17",
        "@types/loadable__component": "^5.13.4",
        "@types/loadable__server": "^5.12.6",
        "@types/react": "^18.0.31",
        "@types/react-dom": "^18.0.11",
        "@types/webpack-env": "^1.18.0",
        "@types/webpack-hot-middleware": "^2.25.6",
        "@types/webpack-node-externals": "^3.0.0",
        "copy-webpack-plugin": "^11.0.0",
        "handlebars-loader": "^1.7.3",
        "html-webpack-plugin": "^5.5.0",
        "ts-loader": "^9.4.2",
        "ts-node": "^10.9.1",
        "typescript": "^5.0.3",
        "webpack": "^5.77.0",
        "webpack-cli": "^5.0.1",
        "webpack-dev-middleware": "^6.0.2",
        "webpack-dev-server": "^4.13.1",
        "webpack-hot-middleware": "^2.25.3",
        "webpack-node-externals": "^3.0.0"
    },
    "dependencies": {
        "@loadable/component": "^5.15.3",
        "express": "^4.18.2",
        "hbs": "^4.2.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    }
}
