{
    "compilerOptions": {
        "module": "CommonJS",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "esnext",
        "moduleResolution": "node",
        "jsx": "react",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "": [
                "node_modules/"
            ]
        },
        "lib": [
            "es2017",
            "dom"
        ]
    },
    "exclude": [
        "node_modules"
    ]
}